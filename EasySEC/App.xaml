<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasySEC.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#FF123456</Color>
            <Color x:Key="BackgroundColor">#FFFFFFFF</Color>
            <Color x:Key="TextColor">#FF000000</Color>
            <!-- Глобальный стиль NavigationBar -->
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#4B4B4B" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>
            <!-- Стиль для заголовков -->
            <Style x:Key="HeaderLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="24" />
                <Setter Property="TextColor" Value="white" />
                <Setter Property="BackgroundColor" Value="#333333" />
                <Setter Property="Padding" Value="10" />
            </Style>

            <!-- Стиль для текста -->
            <Style x:Key="BodyTextStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>