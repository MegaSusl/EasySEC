<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EasySEC.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EasySEC"
    Shell.FlyoutBehavior="Disabled"
    Title="EasySEC">

    <TabBar>
        <Tab Title="Главная" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Документы" Icon="documents.png">
            <ShellContent ContentTemplate="{DataTemplate local:DocumentsPage}" />
        </Tab>
        <Tab Title="Студенты" Icon="students.png">
            <ShellContent ContentTemplate="{DataTemplate local:PlaceholderPage}" />
        </Tab>
        <Tab Title="Преподаватели" Icon="teachers.png">
            <ShellContent ContentTemplate="{DataTemplate local:PlaceholderPage}" />
        </Tab>
        <Tab Title="Шаблоны" Icon="templates.png">
            <ShellContent ContentTemplate="{DataTemplate local:PlaceholderPage}" />
        </Tab>
    </TabBar>

</Shell>
