<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
       x:Class="EasySEC.AddStudentPopup">
    <StackLayout Padding="20">
        <Label Text="Добавить студента" FontSize="Large" />
        <Entry x:Name="FullName" Placeholder="ФИО" />
        <Entry x:Name="email" Placeholder="Email" />
        <Entry x:Name="phone" Placeholder="Телефон" />
        <Entry x:Name="groupId" Placeholder="Группа" />
        <Button Text="Сохранить" Command="{Binding SaveCommand}" />
    </StackLayout>
</toolkit:Popup>