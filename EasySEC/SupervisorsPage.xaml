<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasySEC.SupervisorsPage"
             Title="SupervisorsPage"
             BackgroundColor="#4B4B4B">
    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Для заголовка -->
            <RowDefinition Height="*" />
            <!-- Для CollectionView -->
            <RowDefinition Height="Auto" />
            <!-- Для кнопки -->
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Label Grid.Row="0" 
           Text="Список студентов" 
           FontSize="Large" 
           TextColor="#333333" 
           HorizontalOptions="Center" 
           Margin="0,0,0,10"/>

        <!-- Таблица студентов -->
        <Frame Grid.Row="1" 
           BackgroundColor="White" 
           CornerRadius="5" 
           Padding="0" 
           HasShadow="True">
            <CollectionView ItemsSource="{Binding Supervisors}">
                <CollectionView.Header>
                    <Grid BackgroundColor="#E0E0E0" Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="№" FontAttributes="Bold" TextColor="#333333" />
                        <Label Grid.Column="1" Text="ФИО" FontAttributes="Bold" TextColor="#333333" />
                        <Label Grid.Column="2" Text="Email" FontAttributes="Bold" TextColor="#333333" />
                        <Label Grid.Column="3" Text="Телефон" FontAttributes="Bold" TextColor="#333333" />
                        <Label Grid.Column="4" Text="Действия" FontAttributes="Bold" TextColor="#333333" />
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" BackgroundColor="White">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="{Binding Id}" TextColor="#555555" VerticalOptions="Center" />
                            <Label Grid.Column="1" Text="{Binding FullName}" TextColor="#555555" VerticalOptions="Center" />
                            <Label Grid.Column="2" Text="{Binding Email}" TextColor="#555555" VerticalOptions="Center" />
                            <Label Grid.Column="3" Text="{Binding Phone}" TextColor="#555555" VerticalOptions="Center" />
                            <HorizontalStackLayout Grid.Column="4" Spacing="5" VerticalOptions="Center">
                                <Button Text="Изменить" 
                                    Clicked="OnEditSupervisorClicked" 
                                    BackgroundColor="#4CAF50" 
                                    TextColor="White" 
                                    FontSize="Small" 
                                    Padding="5" 
                                    Margin="0" 
                                    BindingContext="{Binding .}" />
                                <Button Text="Удалить" 
                                    Clicked="OnDeleteSupervisorClicked" 
                                    BackgroundColor="#F44336" 
                                    TextColor="White" 
                                    FontSize="Small" 
                                    Padding="5" 
                                    Margin="0" 
                                    BindingContext="{Binding .}" />
                            </HorizontalStackLayout>
                            <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" Grid.ColumnSpan="5" VerticalOptions="End" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>

        <!-- Кнопка "Добавить студента" -->
        <Button Grid.Row="2" 
            Text="Добавить студента" 
            Clicked="OnAddSupervisorClicked" 
            BackgroundColor="#2196F3" 
            TextColor="White" 
            Margin="0,10,0,0" 
            HorizontalOptions="Center" />
    </Grid>
</ContentPage>